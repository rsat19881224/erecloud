table.table.table-striped#operating_item_table
  tbody
    tr
      th = OperatingDivision.human_attribute_name(:division_no)
      th = OperatingDivision.human_attribute_name(:used)
      th = OperatingDivision.human_attribute_name(:name)
      th = OperatingDivision.human_attribute_name(:abbreviation)
      th = OperatingDivision.human_attribute_name(:input_division)
      th

  - objects.each_with_index do |object,i|
    tr 
      td(width="160px") = OperatingDivision.human_attribute_name(:division_no) + object.division_no.to_s
      td(width="100px") = t(object.used ? 'use' : 'no_use', scope: 'operating_divisions.index.use_option')
      td(width="100px") = object.name 
      td(width="250px") = object.abbreviation 
      td(width="200px") = object.human_input_division 
      
      td(width="60px" align="center") = link_to t('general.label.edit'), polymorphic_path([object], pickup_param.merge(action: :edit)) 

div.box-footer.clearfix
  = paginate objects, remote: true