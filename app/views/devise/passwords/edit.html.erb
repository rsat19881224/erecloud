<div class="form-box" id="login-box">
  <div class="header"><%= render :partial => 'shared/content_title' %></div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div class="body bg-gray">
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autofocus: true, :autocomplete => 'off', :class => 'form-control', :placeholder => t('.placeholder.password') %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, :autocomplete => 'off', :class => 'form-control', :placeholder => t('.placeholder.password_confirmation') %>
      </div>
    </div>

    <div class="footer">
      <%= f.submit t('.submit'), :class => 'btn bg-olive btn-block' %>
    </div>
  <% end %>
</div>
