<div class="form-box" id="login-box">
  <div class="header"><%= render :partial => 'shared/content_title' %></div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="body bg-gray">
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, :autocomplete => 'off', :class => 'form-control', :placeholder => t('.placeholder.mailaddress') %>
      </div>
    </div>
    <div class="footer">
      <%= f.submit t('.submit'), :class => 'btn bg-olive btn-block' %>
    </div>
  <% end %>
</div>
