<div class="form-box" id="login-box">
  <div class="header"><%= render :partial => 'shared/content_title' %></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="body bg-gray">
      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, :autocomplete => 'off', :class => 'form-control', :placeholder => t('.placeholder.mailaddress') %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :autocomplete => 'off', :class => 'form-control', :placeholder => t('.placeholder.password') %>
      </div>
      <div class="form-group">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'normal' %><br />
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    </div>
    <div class="footer">
      <%= f.submit t('.sign-in'), :class => 'btn bg-olive btn-block' %>
    </div>
  <% end %>
</div>
